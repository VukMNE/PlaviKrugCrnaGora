<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_podsjetnik"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.plavikrug.Podsjetnik">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pod_date_picker"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_set_podsjetnik"
        android:text="@string/lbl_btn_set_podsjetnik"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/alarm_naslov"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_dolje"
        android:id="@+id/btn_dolje_sat"
        android:clickable="true"
        android:layout_below="@+id/txt_sati"
        android:layout_alignStart="@+id/btn_gore_sat"
        android:layout_alignLeft="@+id/btn_gore_sat" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_dolje"
        android:id="@+id/btn_dolje_minut"
        android:clickable="true"
        android:layout_below="@+id/txt_minuti"
        android:layout_alignStart="@+id/btn_gore_minut"
        android:layout_alignLeft="@+id/btn_gore_minut" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/alarm_naslov"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btn_dolje_sat"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_naslov"
            android:textSize="20sp"
            android:id="@+id/lbl_naslov"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:background="@drawable/komentar"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/txt_pod_naslov"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/txt_2_tacke"
        android:text=":"
        android:layout_alignBaseline="@+id/txt_minuti"
        android:layout_alignBottom="@+id/txt_minuti"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textAlignment="center"
        android:id="@+id/txt_sati"
        android:inputType="number"
        android:maxLength="2"
        android:background="@android:color/transparent"
        android:layout_toStartOf="@+id/txt_2_tacke"
        android:layout_toLeftOf="@+id/txt_2_tacke"
        android:layout_alignBottom="@+id/txt_minuti" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textAlignment="center"
        android:id="@+id/txt_minuti"
        android:inputType="number"
        android:maxLength="2"
        android:background="@android:color/transparent"
        android:layout_below="@+id/btn_gore_minut"
        android:layout_toEndOf="@+id/txt_2_tacke"
        android:layout_toRightOf="@+id/txt_2_tacke" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_gore"
        android:id="@+id/btn_gore_minut"
        android:clickable="true"
        android:layout_below="@+id/pod_date_picker"
        android:layout_alignEnd="@+id/btn_set_podsjetnik"
        android:layout_alignRight="@+id/btn_set_podsjetnik"
        android:layout_marginRight="14dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_gore"
        android:id="@+id/btn_gore_sat"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/pod_date_picker"
        android:layout_alignLeft="@+id/btn_set_podsjetnik" />
</RelativeLayout>
