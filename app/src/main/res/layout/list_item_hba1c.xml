<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/colorWhite"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_hba1c_li_datum"
        android:textColor="@color/normalText"
        android:textSize="14sp"
        android:fontFamily="@font/segoeuisb"
        android:text="@string/datum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_hba1c_datum"
        android:textColor="@color/normalText"
        android:textSize="14sp"
        android:fontFamily="@font/segoeuisb"
        android:text="DD.MM.GGGG"
        app:layout_constraintTop_toTopOf="@id/lbl_hba1c_li_datum"
        app:layout_constraintLeft_toRightOf="@id/lbl_hba1c_li_datum"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuisb"
        android:textSize="18sp"
        android:textColor="@color/normalText"
        android:text="@string/result_dots"
        android:id="@+id/lbl_hba1c_lbl"
        app:layout_constraintTop_toBottomOf="@id/lbl_hba1c_li_datum"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuisb"
        android:textSize="18sp"
        android:textColor="@color/normalText"
        android:id="@+id/lbl_hba1c_rez"
        app:layout_constraintTop_toBottomOf="@id/lbl_hba1c_li_datum"
        app:layout_constraintLeft_toRightOf="@id/lbl_hba1c_lbl"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:id="@+id/li_hba1c_edit_btn"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:text="@string/edit"
        android:layout_below="@id/lbl_hba1c_rez"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit"
        android:id="@+id/li_hba1c_edit_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/li_hba1c_edit_btn"
        android:layout_marginRight="4dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/secretID1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>