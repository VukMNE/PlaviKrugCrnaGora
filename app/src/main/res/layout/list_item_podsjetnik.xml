<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_pod_datum"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="DD.MM.YYYY"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_pod_vrijeme"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/lbl_pod_datum"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:text="00:00h"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/lbl_pod_vrijeme"
            android:id="@+id/rel"

            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/lbl_pod_naslov"
                android:paddingLeft="60dp"
                android:text="Naslov"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:height="90dp"
        android:id="@+id/deletePodsj"
        android:text="@string/delete"
        android:drawableBottom="@mipmap/deleteimg"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rel"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/secretID2"
        />

</RelativeLayout>